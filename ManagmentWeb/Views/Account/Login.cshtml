    </head>
            <link href="~/css/Login.css" rel="stylesheet" />
            <div class="limiter">
                <div class="container-login100">
                    <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
                        <form class="login100-form validate-form" action="/account/Login" method="post">
                            <div class="text-center">
                                <img style=" width: 20%;" src="~/images/Login.jpg" class="rounded-circle avatar"  alt="Avatar" />
                                
                            </div>
                            <span class="login100-form-title p-b-33" style="margin-top: 5px;">
                                
                                Account Login
                            </span>

                            <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">

                                <input asp-for="Email" class="input100" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <span class="focus-input100-1"></span>
                                <span class="focus-input100-2"></span>
                            </div>

                            <div class="wrap-input100 rs1 validate-input" data-validate="Password is required">

                                <input asp-for="Password" class="input100" placeholder="Password" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <span class="focus-input100-1"></span>
                                <span class="focus-input100-2"></span>
                            </div>

                            <div class="container-login100-form-btn m-t-20">
                                <button type="submit" class="login100-form-btn">
                                    Sign in
                                </button>
                            </div>

                            <div class="text-center p-t-45 p-b-4">


                                <a asp-action="ForgotPassword" class="txt2 hov1">
                                    Forgot  Password?
                                </a>
                            </div>
                            <div class="text-center p-t-9 p-b-4">


                                <a asp-action="SignUp">Sign Up</a>
                            </div>
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger"> <span> @ViewBag.Error</span></div>
                            }

                        </form>
                    </div>
                </div>
            </div>
            <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

