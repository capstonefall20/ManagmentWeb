@model ManagmentWeb.Models.MilestoneModel

@{
    ViewData["Title"] = "AddMilestone";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<h1>Add Milestone</h1>
 
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMilestone" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="MileStoneId" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control datepicker" })
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedDate" class="control-label"></label>
                @Html.TextBoxFor(model => model.ExpectedDate, new { @class = "form-control datepicker" })
                <span asp-validation-for="ExpectedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                @Html.TextBoxFor(model => model.DueDate, new { @class = "form-control datepicker" })
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Responsible Person</label>
                <select asp-for="ResponsiblePersonId" class="form-control">
                    <option value="">Select</option>
                    @if (Model != null && Model.Users != null)
                    {
                        foreach (var item in Model.Users)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="ResponsiblePersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success"> <span> @ViewBag.Success</span></div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger"> <span> @ViewBag.Error</span></div>
            }
        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script>
    $('.datepicker').datepicker({
        format: 'mm/dd/yyyy',
    });
</script>
